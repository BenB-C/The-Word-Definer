<h1 class="word-defined"><%= @word.text %></h1>
<hr>
<% if @definitions.any? %>
  <p><em>Click on a definition to edit or delete it.</em></p>
  <ol>
    <% @definitions.each do |definition| %>
      <li>
        <span class="definition-text">
          <a href="/words/<%= @word.id %>/definitions/<%= definition.id %>">
            <%= definition.text %>
          </a>
        </span>
      </li>
    <% end %>
  </ol>
<% else %>
  <p>There are currently no definitions for <em><%= @word.text %></em>.</p>
<% end %>

<p class="add"><a href="/words/<%= @word.id %>/definitions/new"><img src="/images/plus.png">Add a new definition</a><p>
<p><a href="/words">Return to word list</a></p>
